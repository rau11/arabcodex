@{
    ViewBag.Title = "Home Page";
}
<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="row clsBreadcrum">
        <div class="col-lg-12">
            <h4>Dashboard</h4>
        </div>
    </div>
   
    <!-- Content Row -->
    <div class="row">
        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-12 col-md-12 mb-12">
            <div class="m-content" ng-controller="dashboardController as vm">

                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group m-form__group ">
                            <label class="form-control-label">
                                <span translate="LNG_DEDLicense">Request Number</span>:
                            </label>
                            <div class="input-group">
                                <input type="text" name="txt_RequestNumber" ng-model="vm.RequestNumber" class="form-control form-control-warning" placeholder="Request Number">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group m-form__group ">
                            <label class="form-control-label">
                                <span translate="">Sample Number</span>:
                            </label>
                            <div class="input-group">
                                <input type="text" name="txt_SampleNumber" ng-model="vm.SampleNumber" class="form-control form-control-warning" placeholder="Sample Number">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group m-form__group ">
                            <label class="form-control-label">
                                <span translate="LNG_NameEn">Status</span>:
                            </label>
                            <div class="input-group">
                                @*<input type="text" name="txt_StatusNameEn" ng-model="vm.StatusNameEn" class="form-control form-control-warning" placeholder="Status">*@
                                @*<ui-select ng-model="vm.StatusNameEn" name="ddl_StatusNameEn" theme="select2" ng-disabled="disabled" class="text-left form-control">
                                    <ui-select-match placeholder="Select Status">{{$select.selected.Name}}</ui-select-match>
                                    <ui-select-choices repeat="option.Name as option in Status | filter: $select.search">
                                        <span ng-bind-html="option.Name | highlight: $select.search"></span>
                                    </ui-select-choices>
                                </ui-select>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 m--align-right">
                        <button type="button" ng-click="search()" class="btn btn-info"><i class="fa fa-search"></i> <span translate="LNG_Search">Search</span></button>
                        <button type="button" ng-click="ClearSearch()" class="btn btn-info margin_right"><i class="fa fa-sync"></i> <span translate="LNG_Clear">Clear</span></button>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-md-12 well" style="padding-left:2px;padding-right:2px;">
                            <table datatable="" dt-instance="vm.dtInstance" dt-options="vm.dtOptions" dt-columns="vm.dtColumns" dt-column-defs="vm.dtColumnDefs" class="table table-striped- table-bordered table-hover table-checkable" id="datadetailsdiv" width="100%"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- /.container-fluid -->
@section scripts{
    <script src="~/Assets/plugin/angular-ui-select/select.js"></script>
    <script src="~/Assets/js/datatables.bundle.min.js"></script>

    <script src="~/Scripts/App/dashboard/dashboardController.js"></script>
    <script src="~/Scripts/App/dashboard/service.js"></script>

}